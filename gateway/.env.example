# --- Core ---
ENV=dev                           # dev | staging | prod
LOG_LEVEL=INFO

# --- Database ---
DATABASE_URL=postgresql://mcp_user:mcp_password@localhost:5432/medical_db
DB_POOL_MIN=1
DB_POOL_MAX=10
DB_TIMEOUT_SEC=10

# --- CORS / Frontend ---
ALLOWED_ORIGINS=http://localhost:3000
ALLOW_CREDENTIALS=true

# --- Sessions (cookie-based) ---
SESSION_COOKIE_NAME=sid
SESSION_TTL_SECONDS=2592000       # 30 days
SESSION_SECURE_COOKIES=false      # set true in prod (HTTPS)
SESSION_SAMESITE=lax              # lax | strict | none (use none + secure for cross-site)
COOKIE_SECRET=change-me-please-32B-minimum

# --- MCP (medical-mcp-toolkit) ---
MCP_BASE_URL=http://localhost:9090
MCP_BEARER_TOKEN=dev-token
MCP_CONNECT_TIMEOUT=10
MCP_READ_TIMEOUT=120
